# URI de connexion à la base de données MongoDB locale
MONGO_URI=mongodb://localhost:27017

# Nom de la base de données utilisée dans MongoDB
MONGO_DB=transportdb

# Nom de la collection des produits (articles disponibles à la vente)
MONGO_COLLECTION=produits

# Nom de la collection des utilisateurs (clients ou administrateurs)
MONGO_COLLECTION_UTILISATEURS=utilisateurs

# Nom de la collection des paniers (contenu temporaire avant validation de commande)
MONGO_COLLECTION_PANIERS=paniers

# Nom de la collection des commandes (achats finalisés)
MONGO_COLLECTION_COMMANDES=commandes

# Nom de la collection des avis (commentaires ou notes laissés par les utilisateurs)
MONGO_COLLECTION_AVIS=avis